@model Team

@section stylesCategory{
    @*bunu ona gore yazdiqki burda yazilan css shared papkasinda loayout.cshtml icerisinde render ede bilek*@
    <style>
        label {
            color: red;
        }
    </style>
}
<form method="post" enctype="multipart/form-data">
    @*<div asp-validation-summary="ModelOnly" style="color:red"></div>*@
    <div class="mb-3">
        <label>Title</label>
        <textarea asp-for="Title" class="form-control"></textarea>
        @*<input type="text"asp-for="TrendWord">*@
        <span asp-validation-for="Title" style="color:red"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section scripts{

    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor5/32.0.0/ckeditor.min.js"></script>
    <script>
        ClassicEditor.create(document.querySelector('#Title')).catch(error => {
            console.error(error);
        });
    </script>
}